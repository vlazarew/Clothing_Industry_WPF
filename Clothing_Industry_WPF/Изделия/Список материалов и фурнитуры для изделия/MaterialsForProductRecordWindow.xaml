<Window x:Class="Clothing_Industry_WPF.Изделия.MaterialsForProductRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clothing_Industry_WPF.Изделия"
        xmlns:validators="clr-namespace:Clothing_Industry_WPF.Общее.Работа_с_формами"
        xmlns:validators1="clr-namespace:Clothing_Industry_WPF.Изделия.Список_материалов_и_фурнитуры_для_изделия"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Материал" Height="208" Width="400">
    <Window.Resources>
        <validators1:MaterialsForProduct x:Key="MaterialsForProduct"/>
        <LinearGradientBrush x:Key="Buttongradient" StartPoint="0,0" EndPoint="0,1">            <GradientStop Color="#FF4B4A4A" Offset="1" />            <GradientStop Color="#FFE8E8E8" Offset="0" />        </LinearGradientBrush>
        <Style TargetType="Button">            <Setter Property="Background" Value="{DynamicResource Buttongradient}"/>            <Setter Property="FontSize" Value="15" />            <Setter Property="SnapsToDevicePixels" Value="True" />            <Setter Property="TextBlock.TextAlignment" Value="Center" />            <Setter Property="IsEnabled" Value="True" />            <Setter Property="Template">                <Setter.Value>                    <ControlTemplate TargetType="{x:Type Button}">                        <Border x:Name="MainBorder" CornerRadius="6" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding Background}" BorderThickness="2.5">                            <Grid Margin="0,0,0,-1">                                <DockPanel Name="myContentPresenterDockPanel">                                    <ContentPresenter x:Name="myContentPresenter" VerticalAlignment="Center" Margin="5"             Content="{TemplateBinding  Content}" TextBlock.Foreground="Black" />                                </DockPanel>                            </Grid>                        </Border>                        <ControlTemplate.Triggers>                            <Trigger Property="IsMouseOver" Value="True">                                <Setter Property ="BorderBrush" TargetName="MainBorder"  Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />                            </Trigger>                            <Trigger Property="IsPressed" Value="True">                                <Setter Property ="BorderBrush" TargetName="MainBorder" Value="YellowGreen" />                            </Trigger>                        </ControlTemplate.Triggers>                    </ControlTemplate>                </Setter.Value>            </Setter>        </Style>

        <Style TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}" />
                    <Setter Property="Foreground" Value="Red" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>
    <Grid  VerticalAlignment="Top">
        <Grid.RowDefinitions>            <RowDefinition Height="100"/>            <RowDefinition Height="78"/>        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#F0F0F0">
            <Label Content="Тип:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,23,0,0" Height="26" Width="108" FontSize="14" FontFamily="Arial"/>
            <Label Content="Количество:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,54,0,0" Height="26" Width="91" FontSize="14" FontFamily="Arial"/>
            <TextBox x:Name="textBoxCount" PreviewTextInput="TextBoxCount_PreviewTextInput" Margin="152,54,0,0" TextWrapping="Wrap" TabIndex="2" VerticalContentAlignment="Center" FontSize="14" FontFamily="Arial" HorizontalAlignment="Left" Width="183" Height="26" VerticalAlignment="Top">
                <TextBox.Text>
                    <Binding Source="{StaticResource MaterialsForProduct}" Path="count" Mode="TwoWay" StringFormat="{}{0:F2}}" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true">
                        <Binding.ValidationRules  >
                            <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" MinimumValue="0.1" ErrorMessage="Количество должно быть заполнено"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <ComboBox x:Name="comboBoxName_Of_Material" Margin="152,20,0,0" VerticalAlignment="Top" Height="26" VerticalContentAlignment="Center" FontSize="14" TabIndex="1" IsEditable="True" ScrollViewer.VerticalScrollBarVisibility="Visible" FontFamily="Arial" HorizontalAlignment="Left" Width="183">
                <ComboBox.Text>
                    <Binding Source="{StaticResource MaterialsForProduct}" Path="typeOfMaterial" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true">
                        <Binding.ValidationRules  >
                            <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" ErrorMessage="Тип должен быть заполнен"/>
                        </Binding.ValidationRules>
                    </Binding>
                </ComboBox.Text>
            </ComboBox>
            <Border BorderBrush="Black" BorderThickness="1" Margin="-41,1,-136,0" RenderTransformOrigin="0.503,-0.238"/>

        </Grid>
        <Grid Grid.Row="1" Background="Silver" >
            <Button x:Name="buttonSave" Content="Добавить" HorizontalAlignment="Left" Margin="39,24,0,0" VerticalAlignment="Top" Width="100" Height="30" TabIndex="3" VerticalContentAlignment="Center" Click="ButtonSave_Click" IsDefault="True" FontFamily="Arial" FontSize="14"/>
            <Button Content="Отмена" Margin="235,24,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.694,-0.02" TabIndex="4" VerticalContentAlignment="Center" IsCancel="True" Click="Button_Click" Height="30" HorizontalAlignment="Left" Width="100" FontSize="14" FontFamily="Arial"/>
        </Grid>
    </Grid>
</Window>
