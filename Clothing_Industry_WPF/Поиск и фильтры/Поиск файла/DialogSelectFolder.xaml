<Window x:Class="Clothing_Industry_WPF.Поиск_файла.DialogSelectFolder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clothing_Industry_WPF.Поиск_файла"
        mc:Ignorable="d"
        Title="Выберите каталог" Height="300" Width="300">

    <Grid>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="textBlockDirectory" Text="Выбранный каталог" VerticalAlignment="Top" Width="187" />
        <Button Content="Вверх" Height="23" HorizontalAlignment="Right" Margin="0,12,26,0" Name="buttonUp" VerticalAlignment="Top" Width="61" Click="buttonUp_Click" />
        <ListBox Height="164" HorizontalAlignment="Left" Margin="12,41,0,0" Name="listBoxDirectories" VerticalAlignment="Top" Width="254" MouseDoubleClick="mouseDoubleClickOnListBox" SelectionChanged="currentSelect" />
        <Button Content="Отмена" Height="23" HorizontalAlignment="Right" Margin="0,226,26,0" Name="buttonExit" VerticalAlignment="Top" Width="75" Click="buttonExit_Click" />
        <Button Content="Выбрать" Height="23" HorizontalAlignment="Left" Margin="92,226,0,0" Name="buttonChoose" VerticalAlignment="Top" Width="75" Click="buttonChoose_Click" />
    </Grid>
</Window>
