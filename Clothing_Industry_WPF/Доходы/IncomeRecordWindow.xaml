<Window x:Class="Clothing_Industry_WPF.Доходы.IncomeRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clothing_Industry_WPF.Доходы"
        xmlns:validators="clr-namespace:Clothing_Industry_WPF.Доходы"
        xmlns:validators1="clr-namespace:Clothing_Industry_WPF.Общее.Работа_с_формами"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
         Title="Доходы" Height="208" Width="400">
    <Window.Resources>
        <validators:Income x:Key="Income" month=""/>

        <LinearGradientBrush x:Key="Buttongradient" StartPoint="0,0" EndPoint="0,1">            <GradientStop Color="#FF4B4A4A" Offset="1" />            <GradientStop Color="#FFE8E8E8" Offset="0" />        </LinearGradientBrush>        <Style TargetType="Button">            <Setter Property="Background" Value="{DynamicResource Buttongradient}"/>            <Setter Property="FontSize" Value="15" />            <Setter Property="SnapsToDevicePixels" Value="True" />            <Setter Property="TextBlock.TextAlignment" Value="Center" />            <Setter Property="IsEnabled" Value="True" />            <Setter Property="Template">                <Setter.Value>                    <ControlTemplate TargetType="{x:Type Button}">                        <Border x:Name="MainBorder" CornerRadius="6" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding Background}" BorderThickness="2.5">                            <Grid Margin="0,0,0,-1">                                <DockPanel Name="myContentPresenterDockPanel">                                    <ContentPresenter x:Name="myContentPresenter" VerticalAlignment="Center" Margin="5"             Content="{TemplateBinding  Content}" TextBlock.Foreground="Black" />                                </DockPanel>                            </Grid>                        </Border>                        <ControlTemplate.Triggers>                            <Trigger Property="IsMouseOver" Value="True">                                <Setter Property ="BorderBrush" TargetName="MainBorder"  Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />                            </Trigger>                            <Trigger Property="IsPressed" Value="True">                                <Setter Property ="BorderBrush" TargetName="MainBorder" Value="YellowGreen" />                            </Trigger>                        </ControlTemplate.Triggers>                    </ControlTemplate>                </Setter.Value>            </Setter>        </Style>

    </Window.Resources>
    <Grid  VerticalAlignment="Top">
        <Grid.RowDefinitions>            <RowDefinition Height="100"/>            <RowDefinition Height="78"/>        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#F0F0F0">
            <Label Content="Месяц: " HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,37,0,0" Height="26" Width="70" FontSize="14" FontFamily="Arial"/>

            <ComboBox x:Name="comboBoxMounth" Margin="114,37,0,0" RenderTransformOrigin="0.604,0.481" IsEditable="True" ScrollViewer.VerticalScrollBarVisibility="Visible" FontSize="14" FontFamily="Arial" VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="219" Height="26" VerticalAlignment="Top" >
                <ComboBox.Text>
                    <Binding Source="{StaticResource Income}" Path="month" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true">
                        <Binding.ValidationRules  >
                            <validators1:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" ErrorMessage="Месяц должен быть заполнен"/>
                        </Binding.ValidationRules>
                    </Binding>
                </ComboBox.Text>
            </ComboBox>

            <Border BorderBrush="Black" BorderThickness="1" Margin="-19,0,-11,0" RenderTransformOrigin="0.503,-0.238">            </Border>        </Grid>
        <Grid Grid.Row="1" Background="Silver" Margin="0,0,0,-36">            <Button x:Name="buttonSave" Content="Сохранить" HorizontalAlignment="Left" Margin="39,24,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="ButtonSaveAndExit_Click" IsDefault="True" FontSize="14" FontFamily="Arial"/>
            <Button  x:Name="buttonExit" Content="Выйти" Margin="233,24,0,0" TabIndex="2" Click="ButtonExit_Click" FontFamily="Arial" VerticalAlignment="Top" FontSize="14"  Height="30" HorizontalAlignment="Left" Width="100"/>
        </Grid>
    </Grid>
</Window>
