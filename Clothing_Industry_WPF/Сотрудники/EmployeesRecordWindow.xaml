        <ComboBox x:Name="comboBoxPosition" HorizontalAlignment="Left" Margin="87,236,0,0" VerticalAlignment="Top" Width="255" Height="26" VerticalContentAlignment="Center" FontSize="14" TabIndex="7"/>

    </Grid>
</Window>
