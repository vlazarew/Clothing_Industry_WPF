            <Label Content="Паспортные данные:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,268,0,0" FontFamily="Arial" FontSize="14"/>
            <Label Content="Заметки:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,361,0,0" FontFamily="Arial" FontSize="14"/>
            <Label Content="Фото:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="479,51,0,0" Height="26" FontSize="14" FontFamily="Arial"/>
