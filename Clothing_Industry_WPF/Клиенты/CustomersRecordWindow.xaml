        <Label Content="Параметры: " HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="10,331,0,0"/>
        <TextBox x:Name="textBoxParameters" HorizontalAlignment="Left" Height="26" Margin="94,331,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248" TabIndex="10" VerticalContentAlignment="Center" FontSize="14"/>
        <ComboBox x:Name="comboBoxStatus" HorizontalAlignment="Left" Margin="112,393,0,0" VerticalAlignment="Top" Width="230" Height="26" VerticalContentAlignment="Center" FontSize="14" TabIndex="12"/>

    </Grid>
