            <Image x:Name="imagePhoto"  Height="241" Margin="574,51,0,0" VerticalAlignment="Top" OpacityMask="Black" Cursor="Hand" HorizontalAlignment="Left" Width="241"/>

            <ComboBox x:Name="comboBoxChannel" HorizontalAlignment="Left" Margin="250,423,0,0" VerticalAlignment="Top" Width="164" Height="26" VerticalContentAlignment="Center" FontSize="14" TabIndex="13" RenderTransformOrigin="0.434,-1.231" IsEditable="True" ScrollViewer.VerticalScrollBarVisibility="Visible" KeyUp="ComboBox_TextChanged" DropDownClosed="ComboBox_TextChanged" FontFamily="Arial">
                <ComboBox.Text>
                    <Binding Source="{StaticResource Customer}" Path="channelName" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true" IsAsync="False">
                        <Binding.ValidationRules  >
                            <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" ErrorMessage="Канал связи должен быть заполнен"/>
                        </Binding.ValidationRules>
                    </Binding>
                </ComboBox.Text>
            </ComboBox>
            <ComboBox x:Name="comboBoxEmployee" HorizontalAlignment="Left" Margin="250,454,0,0" VerticalAlignment="Top" Width="164" Height="26" VerticalContentAlignment="Center" FontSize="14" TabIndex="14" IsEditable="True" ScrollViewer.VerticalScrollBarVisibility="Visible" KeyUp="ComboBox_TextChanged" DropDownClosed="ComboBox_TextChanged" FontFamily="Arial">
                <ComboBox.Text>
                    <Binding Source="{StaticResource Customer}" Path="employeeLogin" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true" IsAsync="False">
                        <Binding.ValidationRules  >
                            <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" ErrorMessage="Обслуживающий сотрудник должен быть заполнен"/>
                        </Binding.ValidationRules>
                    </Binding>
                </ComboBox.Text>
            </ComboBox>
            <Label Content="Адрес:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,144,0,0" FontFamily="Arial" FontSize="14"/>
            <TextBox x:Name="textBoxAddress" HorizontalAlignment="Left" Height="26" Margin="250,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" TabIndex="4" VerticalContentAlignment="Center" FontSize="14" FontFamily="Arial" TextChanged="TextBox_TextChanged">
                <Binding Source="{StaticResource Customer}" Path="address" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true" >
                    <Binding.ValidationRules  >
                        <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" ErrorMessage="Адрес должен быть заполнен"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <Label Content="Никнейм:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,206,0,0" FontFamily="Arial" FontSize="14"/>
            <TextBox x:Name="textBoxNickname" HorizontalAlignment="Left" Height="26" Margin="250,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" TabIndex="6" VerticalContentAlignment="Center" FontSize="14" FontFamily="Arial" TextChanged="TextBox_TextChanged">
                <Binding Source="{StaticResource Customer}" Path="nickname" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true" >
                    <Binding.ValidationRules  >
                        <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" ErrorMessage="Никнейм должен быть заполнен"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <Label Content="Параметры:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,330,0,0" FontFamily="Arial" FontSize="14"/>
            <TextBox x:Name="textBoxParameters" HorizontalAlignment="Left" Height="26" Margin="250,330,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" TabIndex="10" VerticalContentAlignment="Center" FontSize="14" FontFamily="Arial" TextChanged="TextBox_TextChanged">
                <Binding Source="{StaticResource Customer}" Path="parameters" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true" >
                    <Binding.ValidationRules  >
                        <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" ErrorMessage="Параметры должны быть заполнены"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <ComboBox x:Name="comboBoxStatus" HorizontalAlignment="Left" Margin="250,392,0,0" VerticalAlignment="Top" Width="164" Height="26" VerticalContentAlignment="Center" FontSize="14" TabIndex="12" IsEditable="True" ScrollViewer.VerticalScrollBarVisibility="Visible" KeyUp="ComboBox_TextChanged" FontFamily="Arial" DropDownClosed="ComboBox_TextChanged">
                <ComboBox.Text>
                    <Binding Source="{StaticResource Customer}" Path="statusName" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true" IsAsync="False">
                        <Binding.ValidationRules  >
                            <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" ErrorMessage="Статус должен быть заполнен"/>
                        </Binding.ValidationRules>
                    </Binding>
                </ComboBox.Text>
            </ComboBox>
            <Label  Content="Обязательные поля помечены (*)" Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Top"  RenderTransformOrigin="0.974,1" FontSize="12" Height="24" FontFamily="Arial"/>
