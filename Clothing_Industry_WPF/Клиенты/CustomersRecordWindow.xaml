            <Label Content="Статус клиента:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,392,0,0" FontFamily="Arial" FontSize="14"/>

            <TextBox x:Name="textBoxLastname" HorizontalAlignment="Left" Height="26" Margin="250,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" TabIndex="1" VerticalContentAlignment="Center" FontSize="14" TextChanged="TextBox_TextChanged" FontFamily="Arial">
                <Binding Source="{StaticResource Customer}" Path="lastname" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true" >
                    <Binding.ValidationRules  >
                        <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" ErrorMessage="Фамилия должна быть заполнена"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <TextBox x:Name="textBoxName" HorizontalAlignment="Left" Height="26" Margin="250,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" TabIndex="2" VerticalContentAlignment="Center" FontSize="14" FontFamily="Arial" TextChanged="TextBox_TextChanged">
                <Binding Source="{StaticResource Customer}" Path="name" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true" >
                    <Binding.ValidationRules  >
                        <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" ErrorMessage="Имя должно быть заполнено"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <TextBox x:Name="textBoxPatronymic" HorizontalAlignment="Left" Height="26" Margin="250,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" TabIndex="3" VerticalContentAlignment="Center" FontSize="14" FontFamily="Arial" TextChanged="TextBox_TextChanged"/>
