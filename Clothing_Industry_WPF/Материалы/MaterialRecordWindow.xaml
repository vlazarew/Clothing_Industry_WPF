<Window x:Class="Clothing_Industry_WPF.Материал.MaterialRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clothing_Industry_WPF.Материал"
        xmlns:validators="clr-namespace:Clothing_Industry_WPF.Общее.Работа_с_формами"
        xmlns:validators1="clr-namespace:Clothing_Industry_WPF.Материалы"
        ResizeMode="NoResize"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Материал" Height="440" Width="850">
    <Window.Resources>
        <validators1:Material x:Key="Material"/>
        <LinearGradientBrush x:Key="Buttongradient" StartPoint="0,0" EndPoint="0,1">            <GradientStop Color="#FF4B4A4A" Offset="1" />            <GradientStop Color="#FFE8E8E8" Offset="0" />        </LinearGradientBrush>
        <Style TargetType="Button">            <Setter Property="Background" Value="{DynamicResource Buttongradient}"/>            <Setter Property="FontSize" Value="15" />            <Setter Property="SnapsToDevicePixels" Value="True" />            <Setter Property="TextBlock.TextAlignment" Value="Center" />            <Setter Property="IsEnabled" Value="True" />            <Setter Property="Template">                <Setter.Value>                    <ControlTemplate TargetType="{x:Type Button}">                        <Border x:Name="MainBorder" CornerRadius="6" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding Background}" BorderThickness="2.5">                            <Grid Margin="0,0,0,-1">                                <DockPanel Name="myContentPresenterDockPanel">                                    <ContentPresenter x:Name="myContentPresenter" VerticalAlignment="Center" Margin="5"             Content="{TemplateBinding  Content}" TextBlock.Foreground="Black" />                                </DockPanel>                            </Grid>                        </Border>                        <ControlTemplate.Triggers>                            <Trigger Property="IsMouseOver" Value="True">                                <Setter Property ="BorderBrush" TargetName="MainBorder"  Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />                            </Trigger>                            <Trigger Property="IsPressed" Value="True">                                <Setter Property ="BorderBrush" TargetName="MainBorder" Value="YellowGreen" />                            </Trigger>                        </ControlTemplate.Triggers>                    </ControlTemplate>                </Setter.Value>            </Setter>        </Style>

        <Style TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}" />
                    <Setter Property="Foreground" Value="Red" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>
    <Grid  VerticalAlignment="Top">
        <Grid.RowDefinitions>            <RowDefinition Height="340"/>            <RowDefinition Height="70"/>        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#F0F0F0">
            <Image HorizontalAlignment="Left" Source="D:\Git\Clothing_Industry_WPF\Clothing_Industry_WPF\Картинки\fotik.png" Height="230" VerticalAlignment="Top" Width="241" Margin="550,59,0,0"/>


            <Border BorderBrush="Black" BorderThickness="1" Margin="-41,0,-136,0" RenderTransformOrigin="0.503,-0.238"/>

            <Border BorderBrush="Black" BorderThickness="1" Margin="425,0,-130,0" RenderTransformOrigin="0.503,-0.238"/>

            <Label Content="Артикул:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,53,0,0" FontSize="14" Height="26" FontFamily="Arial"/>
            <Label Content="Название материала:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,84,0,0" FontSize="14" FontFamily="Arial"/>
            <Label Content="Стоимость:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,115,0,0" FontSize="14" Height="26" FontFamily="Arial"/>
            <Label Content="Заметки:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,146,0,0" FontSize="14" FontFamily="Arial"/>
            <Label Content="Система счисления:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,177,0,0" FontSize="14" Height="26" FontFamily="Arial"/>
            <Label Content="Вид:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,208,0,0" FontSize="14" Height="26" FontFamily="Arial"/>
            <Label Content="Тип:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,239,0,0" FontSize="14" Height="26" FontFamily="Arial"/>
            <Label Content="Страна производитель:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,270,0,0" FontSize="14" Width="161" Height="26" FontFamily="Arial"/>

            <Label Content="Фото:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="464,53,0,0" Height="26" FontSize="14" FontFamily="Arial"/>


            <TextBox x:Name="textBoxVendor_Code" HorizontalAlignment="Left" Height="26" Margin="222,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" TabIndex="1" FontSize="14" MaxLines="1" IsUndoEnabled="False" VerticalContentAlignment="Center" FontFamily="Arial" TextChanged="TextBox_TextChanged">
                <Binding Source="{StaticResource Material}" Path="vendorCode" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true">
                    <Binding.ValidationRules  >
                        <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" MinimumValue="1" ErrorMessage="Артикул должен быть заполнен"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <TextBox x:Name="textBoxName_Of_Material" HorizontalAlignment="Left" Height="26" Margin="222,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" TabIndex="2" VerticalContentAlignment="Center" FontSize="14" FontFamily="Arial" TextChanged="TextBox_TextChanged">
                <Binding Source="{StaticResource Material}" Path="name" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true">
                    <Binding.ValidationRules  >
                        <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" ErrorMessage="Имя должно быть заполнено"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <TextBox x:Name="textBoxCost_Of_Material" HorizontalAlignment="Left" Height="26" Margin="222,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" TabIndex="3" VerticalContentAlignment="Center" FontSize="14" FontFamily="Arial" PreviewTextInput="TextBoxCost_Of_Material_PreviewTextInput" TextChanged="TextBox_TextChanged">
                <Binding Source="{StaticResource Material}" StringFormat="{}{0:F2}}" Path="cost" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true">
                    <Binding.ValidationRules  >
                        <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" MinimumValue="0.1" ErrorMessage="Стоимость должна быть заполнена"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <TextBox x:Name="textBoxNotes" HorizontalAlignment="Left" Height="26" Margin="222,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" TabIndex="4" VerticalContentAlignment="Center" FontSize="14" FontFamily="Arial" TextChanged="TextBox_TextChanged"/>
            <Rectangle x:Name="Border" Stroke="Black" StrokeThickness="5" StrokeDashArray="1 1" SnapsToDevicePixels="True" Margin="544,53,0,0" Height="241" VerticalAlignment="Top" HorizontalAlignment="Left" Width="241"/>
            <Image x:Name="imagePhoto" Height="241" Margin="544,53,0,0" VerticalAlignment="Top" OpacityMask="Black" Cursor="Hand" HorizontalAlignment="Left" Width="241"/>


            <Button x:Name="buttonAddPhoto" Content="+" HorizontalAlignment="Left" Margin="510,53,0,0" VerticalAlignment="Top" Width="26" Height="26" Click="ButtonAddPhoto_Click" TabIndex="14" FontSize="14" FontFamily="Arial"/>
            <ComboBox x:Name="comboBoxUnit" HorizontalAlignment="Left" Margin="222,177,0,0" VerticalAlignment="Top" Width="164" Height="26" VerticalContentAlignment="Center" FontSize="14" TabIndex="5" IsEditable="True" ScrollViewer.VerticalScrollBarVisibility="Visible" FontFamily="Arial" DropDownClosed="ComboBox_TextChanged" KeyUp="ComboBox_TextChanged">
                <ComboBox.Text>
                    <Binding Source="{StaticResource Material}" Path="unitName" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true">
                        <Binding.ValidationRules  >
                            <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" ErrorMessage="Система счисления должна быть заполнена"/>
                        </Binding.ValidationRules>
                    </Binding>
                </ComboBox.Text>
            </ComboBox>
            <ComboBox x:Name="comboBoxGroup" HorizontalAlignment="Left" Margin="222,208,0,0" VerticalAlignment="Top" Width="164" Height="26" VerticalContentAlignment="Center" FontSize="14" TabIndex="6" IsEditable="True" ScrollViewer.VerticalScrollBarVisibility="Visible" FontFamily="Arial" DropDownClosed="ComboBox_TextChanged" KeyUp="ComboBox_TextChanged">
                <ComboBox.Text>
                    <Binding Source="{StaticResource Material}" Path="groupOfMaterialName" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true">
                        <Binding.ValidationRules  >
                            <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" ErrorMessage="Вид должен быть заполнен"/>
                        </Binding.ValidationRules>
                    </Binding>
                </ComboBox.Text>
            </ComboBox>
            <ComboBox x:Name="comboBoxType" HorizontalAlignment="Left" Margin="222,239,0,0" VerticalAlignment="Top" Width="164" Height="26" VerticalContentAlignment="Center" FontSize="14" TabIndex="7" IsEditable="True" ScrollViewer.VerticalScrollBarVisibility="Visible" FontFamily="Arial" DropDownClosed="ComboBox_TextChanged" KeyUp="ComboBox_TextChanged">
                <ComboBox.Text>
                    <Binding Source="{StaticResource Material}" Path="typeOfMaterialName" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true">
                        <Binding.ValidationRules  >
                            <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" ErrorMessage="Тип должен быть заполнен"/>
                        </Binding.ValidationRules>
                    </Binding>
                </ComboBox.Text>
            </ComboBox>
            <ComboBox x:Name="comboBoxCountry" HorizontalAlignment="Left" Margin="222,270,0,0" VerticalAlignment="Top" Width="164" Height="26" VerticalContentAlignment="Center" FontSize="14" TabIndex="8" IsEditable="True" ScrollViewer.VerticalScrollBarVisibility="Visible" FontFamily="Arial" DropDownClosed="ComboBox_TextChanged" KeyUp="ComboBox_TextChanged">
                <ComboBox.Text>
                    <Binding Source="{StaticResource Material}" Path="countryName" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true">
                        <Binding.ValidationRules  >
                            <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" ErrorMessage="Страна должна быть заполнена"/>
                        </Binding.ValidationRules>
                    </Binding>
                </ComboBox.Text>
            </ComboBox>
            <Label  Content="Обязательные поля помечены (*)" Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Top"  RenderTransformOrigin="0.974,1" FontSize="12" Height="24" FontFamily="Arial"/>
            <Label  Content="*" Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Top"  RenderTransformOrigin="2.667,1.75" Margin="105,53,0,0" FontSize="14" Height="26" FontFamily="Arial"/>
            <Label  Content="*" Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Top"  RenderTransformOrigin="2.667,1.75" Margin="190,84,0,0" FontSize="14" Height="26" FontFamily="Arial"/>
            <Label  Content="*" Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Top"  RenderTransformOrigin="2.667,1.75" Margin="123,115,0,0" FontSize="14" Height="26" FontFamily="Arial"/>
            <Label  Content="*" Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Top"  RenderTransformOrigin="2.667,1.75" Margin="181,177,0,0" FontSize="14" Height="26" FontFamily="Arial"/>
            <Label  Content="*" Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Top"  RenderTransformOrigin="2.667,1.75" Margin="78,208,0,0" FontSize="14" Height="26" FontFamily="Arial"/>
            <Label  Content="*" Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Top"  RenderTransformOrigin="2.667,1.75" Margin="76,239,0,0" FontSize="14" Height="26" FontFamily="Arial"/>
            <Label  Content="*" Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Top"  RenderTransformOrigin="2.667,1.75" Margin="200,270,0,0" FontSize="14" Height="26" FontFamily="Arial"/>

        </Grid>
        <Grid Grid.Row="1" Background="Silver">
            <Button x:Name="buttonSaveAndExit" Content="Сохранить и выйти" Margin="639,18,0,0" Click="ButtonSaveAndExit_Click" IsDefault="True" FontSize="14" FontFamily="Arial" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="140"/>
        </Grid>
    </Grid>
</Window>
