<Window x:Class="Clothing_Industry_WPF.Начисление_ЗП.PayrollRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clothing_Industry_WPF.Начисление_ЗП"
        xmlns:validators="clr-namespace:Clothing_Industry_WPF.Общее.Работа_с_формами"
        xmlns:validators1="clr-namespace:Clothing_Industry_WPF.Начисление_ЗП"
        ResizeMode="NoResize"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Начисление ЗП" Height="440" Width="380">
    <Window.Resources>
        <validators1:Payroll x:Key="Payroll"/>
        <LinearGradientBrush x:Key="Buttongradient" StartPoint="0,0" EndPoint="0,1">            <GradientStop Color="#FF4B4A4A" Offset="1" />            <GradientStop Color="#FFE8E8E8" Offset="0" />        </LinearGradientBrush>
        <Style TargetType="Button">            <Setter Property="Background" Value="{DynamicResource Buttongradient}"/>            <Setter Property="FontSize" Value="15" />            <Setter Property="SnapsToDevicePixels" Value="True" />            <Setter Property="TextBlock.TextAlignment" Value="Center" />            <Setter Property="IsEnabled" Value="True" />            <Setter Property="Template">                <Setter.Value>                    <ControlTemplate TargetType="{x:Type Button}">                        <Border x:Name="MainBorder" CornerRadius="6" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding Background}" BorderThickness="2.5">                            <Grid Margin="0,0,0,-1">                                <DockPanel Name="myContentPresenterDockPanel">                                    <ContentPresenter x:Name="myContentPresenter" VerticalAlignment="Center" Margin="5"             Content="{TemplateBinding  Content}" TextBlock.Foreground="Black" />                                </DockPanel>                            </Grid>                        </Border>                        <ControlTemplate.Triggers>                            <Trigger Property="IsMouseOver" Value="True">                                <Setter Property ="BorderBrush" TargetName="MainBorder"  Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />                            </Trigger>                            <Trigger Property="IsPressed" Value="True">                                <Setter Property ="BorderBrush" TargetName="MainBorder" Value="YellowGreen" />                            </Trigger>                        </ControlTemplate.Triggers>                    </ControlTemplate>                </Setter.Value>            </Setter>        </Style>

        <Style TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}" />
                    <Setter Property="Foreground" Value="Red" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>
    <Grid  VerticalAlignment="Top">
        <Grid.RowDefinitions>            <RowDefinition Height="340"/>            <RowDefinition Height="70"/>        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#F0F0F0">
            <Label  Content="Обязательные поля помечены (*)" Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Top"  RenderTransformOrigin="0.974,1" FontSize="12" Height="24" FontFamily="Arial"/>
            <Label  Content="*" Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Top"  RenderTransformOrigin="2.667,1.75" FontSize="14" Height="26" FontFamily="Arial" Margin="87,40,0,0"/>

            <Label Content="Логин:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,40,0,0" Height="26" Width="79" FontSize="14" FontFamily="Arial"/>
            <Label Content="Зарплата:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,134,0,0" Height="26" Width="101" FontSize="14" FontFamily="Arial"/>
            <Label Content="Сдельная зп:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,165,0,0" Height="26" Width="104" FontSize="14" FontFamily="Arial"/>
            <Label Content="Общая зп:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,196,0,0" Height="26" Width="101" FontSize="14" FontFamily="Arial"/>
            <Label Content="Штраф:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,227,0,0" Height="26" Width="60" FontSize="14" FontFamily="Arial"/>
            <Label Content="К выплате:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,258,0,0" Height="26" Width="85" FontSize="14" FontFamily="Arial"/>
            <Label Content="Заметки:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,289,0,0" Height="26" Width="85" FontSize="14" FontFamily="Arial"/>
            <Label Content="Дата выплаты:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,103,0,0" Height="26" Width="107" FontSize="14" FontFamily="Arial"/>
            <TextBox x:Name="textBoxSalary" HorizontalAlignment="Left" Height="26" Margin="151,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" TabIndex="4" VerticalContentAlignment="Center" FontSize="14" PreviewTextInput="TextBoxSalary_PreviewTextInput" TextChanged="TextBoxSalary_TextChanged" FontFamily="Arial">
                <TextBox.Text>
                    <Binding Source="{StaticResource Payroll}" Path="salary" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true">
                        <Binding.ValidationRules  >
                            <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" MinimumValue="1" ErrorMessage="Зарплата должна быть заполнена"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <TextBox x:Name="textBoxTotal_Salary" HorizontalAlignment="Left" Height="26" Margin="151,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" TabIndex="8" VerticalContentAlignment="Center" FontSize="14" IsReadOnly="True" FontFamily="Arial">
                <TextBox.Text>
                    <Binding Source="{StaticResource Payroll}" Path="totalSalary" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true">
                        <Binding.ValidationRules  >
                            <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" MinimumValue="1" ErrorMessage="Зарплата должна быть заполнена"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <TextBox x:Name="textBoxPenalty" HorizontalAlignment="Left" Height="26" Margin="151,227,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" TabIndex="9" VerticalContentAlignment="Center" FontSize="14" PreviewTextInput="TextBoxSalary_PreviewTextInput" TextChanged="TextBoxPenalty_TextChanged" FontFamily="Arial"/>
            <TextBox x:Name="textBoxTo_Pay" HorizontalAlignment="Left" Height="26" Margin="151,258,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" TabIndex="10" VerticalContentAlignment="Center" FontSize="14" IsReadOnly="True" FontFamily="Arial">
                <TextBox.Text>
                    <Binding Source="{StaticResource Payroll}" Path="toPay" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true">
                        <Binding.ValidationRules  >
                            <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" MinimumValue="1" ErrorMessage="Должно быть заполнено"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <TextBox x:Name="textBoxNotes" HorizontalAlignment="Left" Height="26" Margin="151,289,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" TabIndex="11" VerticalContentAlignment="Center" FontSize="14" FontFamily="Arial"/>
            <DatePicker x:Name="datePickerPayrollDate" HorizontalAlignment="Left" Margin="151,102,0,0" VerticalAlignment="Top" Width="164" TabIndex="12" VerticalContentAlignment="Center" FontSize="14" Height="27" FontFamily="Arial">
                <DatePicker.SelectedDate>
                    <Binding Source="{StaticResource Payroll}" Path="dateOfPay" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true">
                        <Binding.ValidationRules>
                            <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" ErrorMessage="Дата выплаты должна быть заполнена"/>
                        </Binding.ValidationRules>
                    </Binding>
                </DatePicker.SelectedDate>
            </DatePicker>
            <ComboBox x:Name="comboBoxLogin" Margin="151,40,0,0" VerticalAlignment="Top" Height="26" VerticalContentAlignment="Center" FontSize="14" TabIndex="3" IsEditable="True" ScrollViewer.VerticalScrollBarVisibility="Visible" FontFamily="Arial" Width="164" HorizontalAlignment="Left">
                <ComboBox.Text>
                    <Binding Source="{StaticResource Payroll}" Path="employeeLogin" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true">
                        <Binding.ValidationRules  >
                            <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" ErrorMessage="Сотрудник должен быть заполнен"/>
                        </Binding.ValidationRules>
                    </Binding>
                </ComboBox.Text>
            </ComboBox>
            <TextBox x:Name="textBoxPieceWork" HorizontalAlignment="Left" Height="26" Margin="151,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" TabIndex="4" VerticalContentAlignment="Center" FontSize="14" PreviewTextInput="TextBoxSalary_PreviewTextInput" TextChanged="TextBoxPieceWork_TextChanged" FontFamily="Arial"/>
            <Label Content="Период:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.974,1" Margin="39,71,0,0" Height="26" Width="63" FontSize="14" FontFamily="Arial"/>
            <TextBox x:Name="textBoxPeriod" HorizontalAlignment="Left" Height="26" Margin="151,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" TabIndex="4" VerticalContentAlignment="Center" FontSize="14" FontFamily="Arial">
                <TextBox.Text>
                    <Binding Source="{StaticResource Payroll}" Path="period" UpdateSourceTrigger="PropertyChanged" ValidatesOnDataErrors="true">
                        <Binding.ValidationRules  >
                            <validators:TextBoxValidator ValidatesOnTargetUpdated="False" MinimumLength="1" ErrorMessage="Период должен быть заполнен"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <CheckBox x:Name="checkBoxPaid" Content="Выплачено" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="39,320,0,0" Width="276" VerticalContentAlignment="Center" FontSize="14" FontFamily="Arial"/>
            <Border BorderBrush="Black" BorderThickness="1" Margin="-41,0,-136,0" RenderTransformOrigin="0.503,-0.238">
                </Border>

        </Grid>
        <Grid Grid.Row="1" Background="Silver">
            <Button x:Name="buttonSaveAndExit" Content="Сохранить и выйти" Margin="175,20,0,0" Click="ButtonSaveAndExit_Click" IsDefault="True" RenderTransformOrigin="0.426,0.52" FontSize="14" HorizontalAlignment="Left" Width="140" FontFamily="Arial" Height="30" VerticalAlignment="Top"/>

        </Grid>
    </Grid>
</Window>
