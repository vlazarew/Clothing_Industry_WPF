                </StackPanel>
            </Border>
        </Grid>
        <Button Style="{StaticResource Active}" x:Name="buttonSaveSettings" Content="Сохранить и выйти" Width="142" Margin="309,24,0,24" TabIndex="1" Click="ButtonSaveSettings_Click" FontSize="14" Grid.Row="1" HorizontalAlignment="Left"/>
    </Grid>
