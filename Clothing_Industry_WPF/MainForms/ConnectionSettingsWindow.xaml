            </Border>
        </Grid>
        <Button Style="{StaticResource Active}" x:Name="buttonSaveSettings" Content="Сохранить и выйти" Width="142" Margin="317,24,0,24" TabIndex="1" Click="ButtonSaveSettings_Click" FontSize="14" HorizontalAlignment="Left" Grid.Row="1"/>
